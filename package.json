{
  "name": "reactstrap-md-textarea",
  "version": "0.4.1",
  "description": "A textarea for markdown input that also shows markdown",
  "main": "dist/textarea.js",
  "repository": "git@bitbucket.org:aixray/reactstap-md-textarea.git",
  "author": "Max Gordon <max@gforge.se>",
  "license": "MIT",
  "private": false,
  "homepage": "https://gforge.github.io/reactstrap-md-textarea",
  "module": "dist/textarea.es6.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --env=jsdom",
    "test:watch": "npm run test -- --watch",
    "start": "cross-env NODE_ENV=development tsc-watch --project tsconfig.base.json  --onSuccess \"rollup -c\"",
    "prebuild": "rimraf dist",
    "build": "npm run compile && npm run build:flow",
    "build:flow": "cp src/index.js.flow dist/index.js.flow",
    "compile": "tsc -p tsconfig.base.json  && cross-env NODE_ENV=production rollup -c && cross-env NODE_ENV=development rollup -c && rimraf compiled",
    "prepublish": "npm run build",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*' 'test/**/*' 'README.md'",
    "precommit": "lint-staged",
    "lint": "tslint -p .",
    "start:example": "cd examples && npm run start",
    "build:example": "cd examples && npm install && npm run build",
    "link:example": "npm link && cd examples && npm link reactstrap-md-textarea",
    "deploy": "npm run link:example && npm run build:example && gh-pages -d examples/build"
  },
  "dependencies": {
    "react-markdown": "^3.3.0",
    "reactstrap": "^6.0.1",
    "xss": "^0.3.7"
  },
  "devDependencies": {
    "@types/react": "^16.3.5",
    "@types/reactstrap": "^5.0.20",
    "cross-env": "^5.1.4",
    "flow-bin": "^0.71.0",
    "flowgen": "^1.2.2",
    "gh-pages": "^1.1.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "lint-staged": "7.1.0",
    "prettier": "1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-filesize": "1.5.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.4.2",
    "tsc-watch": "1.0.21",
    "tslint": "5.10.0",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-fix": "^0.1.0",
    "tslint-react": "3.6.0",
    "typescript": "^2.8.1"
  },
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/test/setupTest.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "examples/*"
    ],
    "delay": "2500"
  }
}
